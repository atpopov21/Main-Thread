<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Main_Thread.PL.Pages.Templates.LanguageSelection">
    <Border
        Stroke="Black"
        BackgroundColor="WhiteSmoke"
        StrokeShape="RoundRectangle 20, 20, 20, 20"
        WidthRequest="200"
        HorizontalOptions="End">
        <HorizontalStackLayout
            RadioButtonGroup.GroupName="Language"
            HorizontalOptions="Center"
            Padding="0, 5, 0, 0">
            <RadioButton
                x:Name="EnglishCheckbox"
                Content="English"
                CheckedChanged="EnglishCheckbox_CheckedChanged" />
            <RadioButton
                x:Name="BulgarianCheckbox"
                Content="Bulgarian"
                CheckedChanged="BulgarianCheckbox_CheckedChanged" />
        </HorizontalStackLayout>
    </Border>
</ContentView>
