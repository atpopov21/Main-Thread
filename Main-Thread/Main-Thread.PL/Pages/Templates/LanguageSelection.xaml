<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Main_Thread.PL.Pages.Templates.LanguageSelection">
    <Border
        x:Name="BorderBox"
        Stroke="Transparent"
        BackgroundColor="White"
        StrokeShape="RoundRectangle 0, 20, 0, 20"
        WidthRequest="200"
        HorizontalOptions="Start">
        <Border.Shadow>
            <Shadow
                Brush="Black"
                Offset="5, 5"
                Radius="10"
                Opacity="0.3"/>
        </Border.Shadow>
        <HorizontalStackLayout
            RadioButtonGroup.GroupName="Language"
            HorizontalOptions="Center"
            Padding="0, 5, 0, 0">
            <Ellipse
                Stroke="White"
                StrokeThickness="1.5"
                HeightRequest="18"
                WidthRequest="18"
                Margin="0, -7, -22, 0"/>
            <RadioButton
                x:Name="EnglishCheckbox"
                Content="English"
                CheckedChanged="EnglishCheckbox_CheckedChanged" />
            <Ellipse
                x:Name="Splitter"
                WidthRequest="2"
                Margin="0, -5, 0, 0"/>
            <Ellipse
                Stroke="White"
                StrokeThickness="1.5"
                HeightRequest="18"
                WidthRequest="18"
                Margin="5, -7, -22, 0"/>
            <RadioButton
                x:Name="BulgarianCheckbox"
                Content="Bulgarian"
                CheckedChanged="BulgarianCheckbox_CheckedChanged" />
        </HorizontalStackLayout>
    </Border>
</ContentView>
