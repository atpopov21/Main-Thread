<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Main_Thread.PL.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Main_Thread.PL"
    xmlns:pages="clr-namespace:Main_Thread.PL.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Main Thread"
    FlyoutBackgroundColor="AliceBlue">

    <ShellContent
        Title="Main Thread | Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Main Thread | Register a company"
        ContentTemplate="{DataTemplate pages:RegisterCompany}"
        Route="RegisterCompany" />
    
    <ShellContent
        Title="Main Thread | Login to a company"
        ContentTemplate="{DataTemplate pages:LoginToCompany}"
        Route="LoginToCompany" />

    <ShellContent
        Title="Main Thread | Home page"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />

</Shell>
